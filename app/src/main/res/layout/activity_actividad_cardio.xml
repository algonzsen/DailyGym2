<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/mapa"
    >

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="MI UBICACION ACTUAL"
        android:textColor="#090909"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/boton_ubActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:gravity="center|center_horizontal"
        android:text="Tiempo transcurrido de cardio:"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Chronometer
        android:id="@+id/crono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_iniciarcardio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIAR CARDIO"
        android:gravity="center"
        android:textColorHint="@android:color/background_dark" />

    <Button
        android:id="@+id/btn_pararcardio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="PARAR CARDIO" />

    <Button
        android:id="@+id/btn_finalizarcardio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="FINALIZAR CARDIO" />

    <Button
        android:id="@+id/btn_vermapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CREAR RUTAS" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal"
        android:text="KCAL GASTADAS:"
        android:textColor="@android:color/black"
        android:textStyle="bold" />




</LinearLayout>